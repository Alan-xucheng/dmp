/* --Elements-- */
*{
	padding:0px;
	margin:0px;
	word-break: break-all;
	outline: none;
}
body{
	 _background-image: url(about:blank);     /*用浏览器空白页面作为背景*/
	 _background-attachment: fixed;     /* prevent screen flash in IE6 确保滚动条滚动时，元素不闪动*/
	 background-color: #fff;
	 font-family: "微软雅黑","Microsoft Yahei";
}
.error{
	margin-top: 15px;
	/*height: 35px;*/
	line-height: 35px;
	color:red;
	font-size: 16px;
}
.login-header{
	min-width: 700px;
	min-height: 320px;
	background:url(../../img/bg_login.jpg) #23b7c8 center bottom no-repeat;
	border-bottom:1px solid #05699a;  
}
.login-main{
	margin: auto;
	margin-top:20px; 
	width: 500px;
}
.login-table{
	/*width: 100%;*/
	line-height: 30px;
	text-align: left;
}
.login-table th,.login-table td{
	padding: 10px 5px;
}
.login-table th{
	font-weight: normal;
	text-align: right;
	font-size: 20px;
	color: #707070;
}
input[type='text'],input[type="password"]{
	padding: 1px 5px;
	width: 237px;
	height: 35px;
	background-color:#f5f5f5;
	background-repeat: no-repeat;
	border:1px solid #9FA0A0;
	border-radius: 2px;
	font-size: 16px;
}
input[type='text'].login-account{
	padding-left: 35px;
	background-image: url(img/icon_account.png);
	background-position: 5px center;
	background-size: 24px;
}
input[type="password"]{
	padding-left: 35px;
	background-image: url(img/icon_pwd.png);
	background-position: 7px center;
	background-size: 20px;
}
input[type='text'].login-code{
	padding-left: 8px;
	width: 264px;
}
.login-img-yzm{
	width: 82px;
    height: 37px;
    border: 1px solid #9FA0A0;
    border-radius: 2px;
    cursor: pointer;
    vertical-align: middle;
}
.btn-login{
	width: 135px;
	height: 50px;
	font:bold 24px/50px "微软雅黑","Microsoft Yahei";
}
.tip-layer{
	z-index: 1000;
	position: fixed;
	width: 100%;
	height: 100%;
	background: #000;
	opacity: 0.8;
}
.tip-layer p{
	position: absolute;
	top: 50%;
	left: 50%;
	margin-left: -130px;
	color: #fff;
}